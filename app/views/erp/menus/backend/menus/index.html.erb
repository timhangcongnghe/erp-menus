<% content_for :title do %>Danh Sách Menu Website<% end %>
<% content_for :page_title do %><i class="fa fa-th-list"></i> Danh Sách Menu Website<% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: 'Tạo menu mới', href: erp_menus.new_backend_menu_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp_menus.list_backend_menus_path,
    keywords:[
        {text: 'Tên menu', name: 'erp_menus_menus.name'},
        {text: 'Menu cha', name: 'parents_erp_menus_menus.name', select: {name: 'parents_erp_menus_menus.id', data_url: erp_menus.dataselect_backend_menus_path}}
    ],
    actions:[
        {text: '<i class="fa fa-eye-slash"></i> Ẩn menu được chọn'.html_safe, url: erp_menus.archive_all_backend_menus_path, data_method: 'PUT', data_confirm: 'Bạn có chắc chắn muốn ẩn những menu này không?'},
        {text: '<i class="fa fa-eye"></i> Hiện menu được chọn'.html_safe, url: erp_menus.unarchive_all_backend_menus_path, data_method: 'PUT', data_confirm: 'Bạn có chắc chắn muốn hiện những menu này không?'}
    ],
    filters:[
        {text: 'Hiện dạng ngang', name: 'erp_menus_menus.style_show', value: true, checked: false},
        {text: 'Lọc theo thuộc tính', name: 'erp_menus_menus.use_filter', value: true, checked: false},
        {text: 'Chuyển hướng url', name: 'erp_menus_menus.is_redirect', value: true, checked: false},
        {text: 'Không tạo url', name: 'erp_menus_menus.not_create_link', value: true, checked: false},
        {divider: true},
        {text: 'Đang bị ẩn', name: 'show_archived', value: true, checked: false},
        {text: 'Không menu cha', name: 'erp_menus_menus.parent_id', value: 'nil', checked: false}
    ],
    columns:[
        {text: 'Tên menu', name: 'name', value: true, checked: true},
        {text: 'Menu cha', name: 'parent_name', value: true, checked: true},
        {text: 'Trạng thái', name: 'status', value: true, checked: true},
        {text: 'Người tạo', name: 'creator', value: true, checked: false},
        {text: 'Ngày tạo', name: 'created_at', value: true, checked: false}
    ],
    sort:{sort_by: 'erp_menus_menus.created_at', sort_direction: 'desc'}
) %>